<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".SignUp_Activity">

    <Space
        android:id="@+id/Top_Space"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_SIGN_UP"
        android:layout_width="165dp"
        android:layout_height="70dp"
        android:background="@drawable/round"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_Space" />

    <Space
        android:id="@+id/Space2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text_SIGN_UP" />

    <EditText
        android:id="@+id/INPUT_signup_id"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/edge"
        android:inputType="text"
        android:hint="input id"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space2" />

    <Space
        android:id="@+id/Space3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/INPUT_signup_id" />

    <EditText
        android:id="@+id/INPUT_signup_nickname"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/edge"
        android:inputType="text"
        android:hint="input nickname"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space3" />

    <Space
        android:id="@+id/Space4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/INPUT_signup_nickname" />

    <EditText
        android:id="@+id/INPUT_signup_pwd"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/edge"
        android:inputType="textPassword"
        android:hint="input pwd"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space4" />

    <Space
        android:id="@+id/Space5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/INPUT_signup_pwd" />

    <EditText
        android:id="@+id/INPUT_signup_pwd_check"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/edge"
        android:inputType="textPassword"
        android:hint="input pwd check"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space5" />

    <Space
        android:id="@+id/Space6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/INPUT_signup_pwd_check" />

    <Button
        android:id="@+id/SIGN_UP_END"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/signup_button"
        android:text="완료"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space6" />

    <Button
        android:id="@+id/ID_check"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/signup_button"
        android:text="ID 중복 체크"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/INPUT_signup_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space2" />

    <Button
        android:id="@+id/NICKNAME_check"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/signup_button"
        android:text="NICKNAME 중복 체크"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/INPUT_signup_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space3" />

    <Button
        android:id="@+id/PASSWORD_check"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/signup_button"
        android:text="PASSWORD 일치 체크"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/INPUT_signup_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Space5" />
</androidx.constraintlayout.widget.ConstraintLayout>